<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="#f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sparsh23.laltern.Checkout_Page"
    tools:showIn="@layout/activity_checkout__page">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="#f5f5f5">

    <TextView
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT SHIPPING ADDRESS"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"/>

    <Spinner
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkout_addr">

    </Spinner>

    <Button
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/add_more_addr"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadowbag"
        android:layout_gravity="center_horizontal"
        android:text="ADDRESS"
        android:textColor="#797777"
        android:paddingRight="5dp"
        android:drawableLeft="@drawable/ic_exposure_plus_1_black_24dp"/>


    <LinearLayout
        android:id="@+id/addr_new"
        android:visibility="gone"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_addr_title"
            android:hint="Title (ex. Home, Work etc)"/>
        <EditText


            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_addr"
            android:hint="Address"/>
        <EditText


            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area"
            android:id="@+id/enter_addr_area"/>
        <EditText


            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_addr_city"
            android:hint="City"/>
        <EditText


            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_addr_dist"
            android:hint="District"/>
        <EditText


            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_addr_state"
            android:hint="State"/>
        <EditText


            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:id="@+id/enter_addr_pin"
            android:hint="Pincode (ex. 201310)"/>
        <EditText


            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:maxLength="10"
            android:id="@+id/enter_addr_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact No"
            android:inputType="phone"/>

        <Button

            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:id="@+id/add_new_addr"
            android:background="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:paddingBottom="3dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:background="@drawable/shadowbag"

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="#424242"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Sub Total  :   1000 "
                android:id="@+id/cartsubtotal"
                android:layout_gravity="end"/>

            <TextView
                android:textColor="#424242"
                android:layout_margin="2dp"
                android:id="@+id/carttaxtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:paddingRight="5dp"
                android:text="Total Taxes :     500 "
                android:layout_gravity="end"/>

            <TextView
                android:textColor="#424242"
                android:layout_margin="2dp"
                android:paddingRight="5dp"
                android:id="@+id/cartgrandtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Total  :10000 "
                android:layout_gravity="end"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>





    </ScrollView>


</LinearLayout>
