<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"

        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/shadowbag">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_marginTop="10dp"

                android:id="@+id/cartproductimg"
                android:layout_height="120dp" />


            <LinearLayout



                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="@drawable/round"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:textSize="16dp"
                        android:singleLine="true"
                        android:paddingTop="5dp"
                        android:background="@color/white"
                        android:id="@+id/cartprotitle"
                        android:textColor="#444444"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="Title"/>



                </LinearLayout>

                <TextView

                    android:textSize="16dp"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:id="@+id/order_pro_id"
                    android:textColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="Product Code : 123"/>

                <TextView
                    android:textColor="#424242"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:text="Rs. 500"
                    android:id="@+id/prototalprice"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">





                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/cartprosize"

                        android:layout_weight="1"
                        android:textColor="#424242"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Size: 10"/>

                </LinearLayout>


                <LinearLayout
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="#424242"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cartproprice"
                        android:text="100000/Unit"/>

                    <View
                        android:paddingTop="8dp"
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:background="#424242">

                    </View>

                    <TextView
                        android:textColor="#424242"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:textSize="12dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cartquantity"

                        android:text="Quantity"/>


                </LinearLayout>

                <TextView
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:id="@+id/order_pro_status"
                    android:textColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="Not Delivered"

                    />


            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b3b0b0"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">










        </LinearLayout>

    </LinearLayout>


</LinearLayout>