<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#f5f5f5"



    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/navrep"
    tools:context="com.example.sparsh23.laltern.NavigationMenu"
    tools:showIn="@layout/app_bar_navigation_menu">
    <ScrollView
        android:layout_marginTop="5dp"
        android:scrollbars="none"
        android:id="@+id/scrollviewnav"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout



            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:orientation="vertical"


            android:layout_height="match_parent">





            <include
                layout="@layout/nav_menu"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                />



                <EditText



                    android:hint="Search for Crafts, Artist and Products...."


                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="13dp"
                    android:focusable="false"
                    android:id="@+id/searchviewrealid"

                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:drawableRight="@drawable/vector_drawable_filter"


                    android:layout_width="match_parent"
                    android:background="@drawable/shadowbag"
                    android:layout_height="45dp">

                </EditText>














            <LinearLayout
                android:layout_width="match_parent"


                android:background="#f5f5f5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >


                <ImageView
                    android:background="#f5f5f5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/bortwo"/>

            <TextView
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Trending Products"
                android:textColor="#444444"
                android:textStyle="bold"
                android:id="@+id/trend"
                android:layout_marginRight="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:paddingLeft="5dp"

                android:textSize="20dp"/>









            <org.lucasr.twowayview.TwoWayView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontallist"


                android:orientation="horizontal"
                android:paddingBottom="5dp"/>
           </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"


                android:background="#f5f5f5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:background="#f5f5f5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/bortwo"
                    tools:ignore="ContentDescription" />

                <TextView

                    android:layout_marginLeft="10dp"

                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Top Products"
                    android:textColor="#444444"
                    android:textStyle="bold"
                    android:id="@+id/topproducts"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:background="@android:color/transparent"
                    android:paddingLeft="5dp"

                    android:textSize="20dp"/>

                <org.lucasr.twowayview.TwoWayView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontallisttop"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/layout_suicide"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" View Crafts"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:background="#f5f5f5"
                    android:textColor="#444444"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/craft_suicide"
                    android:textSize="2dp"/>



                <com.example.sparsh23.laltern.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:id="@+id/expandgrid_suicide"
                    android:background="#f5f5f5"
                    android:layout_height="2dp"
                    android:numColumns="2">
                </com.example.sparsh23.laltern.ExpandableHeightGridView>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical">

                <ImageView
                    android:background="#f5f5f5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/bortwo"/>


                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" View Crafts"
                    android:paddingLeft="5dp"

                    android:paddingTop="5dp"
                    android:background="#f5f5f5"
                    android:textColor="#444444"

                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/craft"
                    android:textSize="20dp"/>



                <com.example.sparsh23.laltern.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:id="@+id/expandgrid"
                    android:background="#f5f5f5"
                    android:layout_height="wrap_content"
                    android:numColumns="2">

                </com.example.sparsh23.laltern.ExpandableHeightGridView>

            </LinearLayout>




            <LinearLayout
                android:layout_marginBottom="5dp"

                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:background="#f5f5f5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/bortwo"
                    tools:ignore="ContentDescription" />


                <TextView

                    android:textColor="#444444"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" View Artist"

                    android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="#f5f5f5"

                    android:id="@+id/artist"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:textSize="20dp"/>

              <com.example.sparsh23.laltern.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:id="@+id/expandgridone"
                    android:background="#f5f5f5"
                    android:layout_height="wrap_content"
                    android:numColumns="1">

                </com.example.sparsh23.laltern.ExpandableHeightGridView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"

                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:background="#f5f5f5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/bortwo"/>


                <TextView
                    android:textColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Testimonials"

                    android:layout_marginLeft="10dp"
                    android:background="#f5f5f5"

                    android:paddingTop="5dp"
                    android:id="@+id/testicals"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:textSize="20dp"/>

                <com.example.sparsh23.laltern.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:id="@+id/expandtesticals"
                    android:background="#f5f5f5"
                    android:layout_height="wrap_content"
                    android:numColumns="1">

                </com.example.sparsh23.laltern.ExpandableHeightGridView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
