<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundoff"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.sparsh23.laltern.AboutProductFrag">

    <!-- TODO: Update blank fragment layout -->




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/backgroundoff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/titlepro"

                        android:text="TITLE"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"

                        android:layout_weight="1"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MOQ- 5"
                        android:paddingRight="8dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:textSize="12dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:id="@+id/quantitypro"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2000"

                        android:textSize="16dp"
                        android:textColor="@color/green"
                        android:layout_weight="1"
                        android:id="@+id/pricepro"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:paddingRight="20sp"/>

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="2"
                        android:layout_marginRight="5dp"
                        android:progressTint="#DAA520"
                        android:layout_height="wrap_content"
                        android:id="@+id/productratingtrending"/>




                </LinearLayout>


                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:background="@color/white"

                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    >


                </com.daimajia.slider.library.SliderLayout>

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/custom_indicator"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    custom:selected_color="#bf0036"
                    custom:unselected_color="#55333333"

                    custom:shape="oval"
                    custom:selected_padding_left="5dp"
                    custom:selected_padding_right="5dp"
                    custom:unselected_padding_left="5dp"
                    custom:unselected_padding_right="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    custom:selected_width="6dp"
                    custom:selected_height="6dp"
                    custom:unselected_width="6dp"
                    custom:unselected_height="6dp"
                    android:layout_marginBottom="10dp"
                    />













                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/backgroundoff">




                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shadowbag"

                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/selectquantitylabel"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Quantity"/>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <com.crystal.crystalrangeseekbar.widgets.BubbleThumbSeekbar

                            android:id="@+id/quantity"
                            android:background="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"

                            app:left_thumb_image="@drawable/seekbar"
                            android:paddingRight="10dp"

                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>


                        <TextView
                            android:textSize="20dp"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:textAlignment="textEnd"
                            android:paddingRight="10dp"
                            android:layout_gravity="end"

                            android:layout_height="wrap_content"
                            android:text="100"

                            android:id="@+id/quantityseek"
                            />




                    </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">





                    </LinearLayout>










                </LinearLayout>



                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadowbag">













                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">


                        </LinearLayout>


                        <TextView
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DESCRIPTION : "

                            android:id="@+id/deshead"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Test Description"
                            android:id="@+id/descriptionpartpro"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#7000"></View>

                        <TextView

                            android:id="@+id/crafthead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" CRAFT USED"
                            android:layout_margin="8dp"

                            android:textStyle="bold"/>
                        <TextView

                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/typepro"

                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"



                            android:background="@color/white"
                            >



                        </LinearLayout>
















                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/similarproductslabel"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Similar Products"/>
            <org.lucasr.twowayview.TwoWayView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/similarproducts"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp"/>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/multiple_actions_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|end"


        fab:menu_labels_style="@style/menu_labels_style"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/requestred"



            fab:fab_label=" Send Request "

            android:id="@+id/fabreq"
            fab:fab_colorNormal="#43a047"
            fab:fab_colorPressed="@color/green"/>

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            fab:fab_colorNormal="#43a047"


            fab:fab_label=" Add To Cart "
            android:id="@+id/fabcart"
            android:src="@drawable/cartpro"
            fab:fab_colorPressed="@color/green" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:src="@drawable/checkout"
            fab:fab_colorNormal="@android:color/transparent"
            fab:fab_colorPressed="@color/green"
            />

    </com.github.clans.fab.FloatingActionMenu>




</FrameLayout>
